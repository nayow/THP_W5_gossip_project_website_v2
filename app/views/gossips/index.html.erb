<h1 class="display-4 text-center">Les derniers potins en date</h1>
<p class="text-center"><%= link_to 'Balance le tien!', new_gossip_path %></p>
<br/>
<div class="card-columns">
  <% Gossip.all.each do |gossip| %>
    <div class="card bg-light p-3">
      <blockquote class="blockquote mb-0 card-body">
        <p>
          <%= link_to gossip.title, gossip_path(gossip.id) %><br/>
          <small><%= Comment.count(gossip.id) %> commentaires</small>
          <% if current_user && current_user.id == gossip.user.id %>
            <%= link_to 'Modifier', edit_gossip_path(gossip.id) %>
          <% end %>
          <%= button_to 'Like', gossip_likes_path(gossip.id), method: :post %>
          <%= gossip.likes.count %> likes
        </p>
        <footer class="blockquote-footer">
          <small class="text-muted">
            <%= gossip.user.first_name %>
          </small>
        </footer>
      </blockquote>
    </div>
  <% end %>
</div>